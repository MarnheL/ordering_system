            <div class="container-fluid ">
                <div class="row g-3 ">
                    <div class="row g-3 ">
                        <div class="container">
                            <section>
                                <div class="row">
                                    <div class="col-xl-6 col-md-12 mb-4">
                                        <div class="card bg-dark">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between p-md-1">
                                                    <div class="d-flex flex-row">
                                                        <div>
                                                            <h4 class="text-white">Total Sales</h4>
                                                            <p class="mb-0 text-white">Daily Records</p>
                                                        </div>
                                                    </div>
                                                    <div class="align-self-center">
                                                        <h2 class="h1 mb-0 text-white"><%- total_sales %></h2>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                        <div class="container  d-flex justify-content-end ms-4 ">
                          
                            <div class="col-md-4 d-grid gap-2 mb-1 ">
                                <form action="/admin/sales-report" method="GET">
                                    <div class="input-group ">
                                        <input class="form-control bg-white text-dark" type="date" id="inputdateStart" name="start" required>
                                        <input class="form-control bg-white text-dark" type="date" id="inputdateEnd" name="end" required>
                                        <button class="btn bg-dark text-white btn-sm " type="submit">Sort</button>
                                    </div>
                                </form>
                            </div>
                        </div>        
                    </div>
                </div>
            </div>
            <!-- table -->
            <table class="table table-hover  rounded text-center bg-white">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Item Name</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Subtotal</th>
                        <th scope="col">Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% order.forEach(data => { %>
                        <tr>
                            <td>
                                <% data.items.forEach(item => { %>
                                    <p><%- item.product_id %></p>
                                <% }) %>
                            </td>
                            <td>
                                <% data.items.forEach(item => { %>
                                    <p><%- item.name %></p>
                                <% }) %>
                            </td>
                            <td>
                                <% data.items.forEach(item => { %>
                                    <p><%- item.quantity %></p>
                                <% }) %>
                            </td>
                            <td><%- data.sub_total %></td>
                            <td><%- data.createdAt.toLocaleString()  %></td>
                        </tr>
                    <% }) %>
                    <% sales.forEach(data => { %>
                        <tr>
                            <td>
                                <p><%- data.product_id %></p>
                            </td>
                            <td>
                                <p><%- data.product_name %></p>
                            </td>
                            <td>
                                <p><%- data.product_quantity %></p>
                            </td>
                            <td><%- data.sub_total %></td>
                            <td><%- data.createdAt.toLocaleString() %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <!-- Page Content -->
        </div>
            
